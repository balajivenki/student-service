{
    "settings": {
        "index": {
            "refresh_interval": "1s",
            "number_of_shards": "10",
            "number_of_replicas": "2"			
        }
    },
    "mappings": {
            "student": {
                "_all": {
                    "enabled": false
                },
                "properties": {
                    "studentId": {
                        "type": "keyword"
                    },
                    "email": {
                        "type": "text",
						"analyzer": "simple"
                    },
					"name" : {
                        "type": "text",
                        "fields": {
                            "raw": {
                                "type": "keyword"
                            }
                        }
                    },
                    "address": {
                        "type": "nested",
                        "include_in_parent": true,
                        "properties": {
                            "street": {
                                "type": "text",
								"fields": {
                                    "raw": {
                                        "type": "keyword"
                                    }
                                }
                            },
							"city": {
                                "type": "text",
								"fields": {
                                    "raw": {
                                        "type": "keyword"
                                    }
                                }
                            },
							"country": {
                                "type": "text",
								"fields": {
                                    "raw": {
                                        "type": "keyword"
                                    }
                                }
                            },                            
                            "pincode": {
                                "type": "long"
                            }  
                        }
                    }  
                }
            }
        },     
    "aliases": {
        
    }
       
}